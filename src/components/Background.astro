---
import { Image } from "astro:assets";
import BackgroundImage from "../assets/background1.png";
---

<Image
  src={BackgroundImage}
  priority
  quality={100}
  alt={"Purple gradient background"}
>
  <style>
    img {
      width: 100%;
      height: 100vh;

      z-index: -1;
      position: absolute;
      top: 0;
      left: 0;
      object-fit: cover;

      -webkit-mask-image: linear-gradient(
        to bottom,
        var(--primary-color) 50%,
        transparent 100%
      );
      mask-image: linear-gradient(
        to bottom,
        var(--primary-color) 50%,
        transparent 100%
      );
    }
  </style></Image
>
